<body id="listEdit" class="mainejs">
    <h1 class="primaryHeading">Edit <%=list.title%> list</h1>
    <header class="otherContent">
            <nav>
                <ul class="navUl">
                    <li>
                        <a href="/lists/<%=list._id%>"> <button>Back to <%=list.title%></button> </a>
                    </li>
                    <li>
                        <a href="/lists"><button>All Lists</button></a>
                    </li>
                </ul>
            </nav>  
    </header>

    <main class="mainContent" id="listEMain">

        <h2 class="">Edit your list:</h2>
        <form action="/lists/<%=list._id%>?_method=PUT" method="POST">
            Select which group the list belongs: <select name="groupId">
                <% for(let i = 0; i < groups.length; i++) { %>
                <option value="<%=groups[i]._id%>" <% if(groups[i]._id.toString() === listGroup._id.toString()){ %> selected
                    <% } %>>
                    <%=groups[i].name%>
                </option>
                <% } %>
            </select><br />
            <br>
            Edit list title: <input type="text" name="title" value="<%=list.title%>"> <br>
            <br>
            Edit list items: <input type="text" name="items" value="<%=list.items%>"> <br>
            <br>
            Edit list due date: <input type="text" name="dueDate" value="<%=list.dueDate%>"> <br>
            <br>
            <button style type="submit">Update List</button>
        </form>
    </main>
    <footer class="ejsFooter">
            <p>Get Together 2019 Â® </p>
        </footer>
</body>
